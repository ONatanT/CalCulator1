<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewSolution"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textSize="40dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonAC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/designacbutton"
            android:onClick="onAcClick"
            android:text="AC"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonSubtract"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/designacbutton"
            android:onClick="onSubtractClick"
            android:text="Â±"
            android:textColor="@color/black"
            android:textSize="40dp" />

        <Button
            android:id="@+id/buttonPrecent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/designacbutton"
            android:onClick="onOperatorClick"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="40dp" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/designoperatorbutton"
            android:onClick="onOperatorClick"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSeven"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/designnumbutton"
            android:onClick="onNumberClick"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/buttonEight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/designnumbutton"
            android:onClick="onNumberClick"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/buttonNine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/designnumbutton"
            android:onClick="onNumberClick"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/designoperatorbutton"
            android:onClick="onOperatorClick"
            android:text="x"
            android:textColor="@color/white"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonFour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/designnumbutton"
            android:onClick="onNumberClick"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/buttonFive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/designnumbutton"
            android:onClick="onNumberClick"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/buttonSix"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/designnumbutton"
            android:onClick="onNumberClick"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/designoperatorbutton"
            android:onClick="onOperatorClick"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/designnumbutton"
            android:onClick="onNumberClick"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/buttonTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/designnumbutton"
            android:onClick="onNumberClick"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/buttonThree"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/designnumbutton"
            android:onClick="onNumberClick"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.25"
            android:background="@drawable/designoperatorbutton"
            android:onClick="onOperatorClick"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonZero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.33"
            android:background="@drawable/designnumbutton"
            android:onClick="onNumberClick"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/designnumbutton"
            android:onClick="onDotClick"
            android:text="."
            android:textColor="@color/white"
            android:textSize="40dp" />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/designoperatorbutton"
            android:onClick="onEqualClick"
            android:text="="
            android:textColor="@color/white"

            android:textSize="40dp" />

    </LinearLayout>

</LinearLayout>
